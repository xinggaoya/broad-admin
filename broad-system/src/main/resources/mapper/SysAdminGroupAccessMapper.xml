<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.broad.system.mapper.SysAdminGroupAccessMapper">

    <resultMap type="com.broad.system.entity.SysAdminGroupAccess" id="systemAdminGroupAccess">
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="uid" column="access_id" jdbcType="INTEGER"/>
    </resultMap>

    <select id="selectByAdminId" resultType="com.broad.system.entity.SysAdminGroupAccess">
        SELECT saga.group_id,
               saga.uid,
               sag.rules
        FROM sys_admin_group_access saga
                 LEFT JOIN `sys_admin_group` sag ON sag.id = saga.group_id
        WHERE saga.uid = #{adminId}
    </select>


</mapper>

