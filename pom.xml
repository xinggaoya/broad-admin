            <!--                <groupId>com.broad</groupId>-->
            <!--                <artifactId>broad-quartz</artifactId>-->
            <!--                <version>${broad.version}</version>-->
            <!--            </dependency>-->

        </dependencies>
    </dependencyManagement>

</project>