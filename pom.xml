<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.broad</groupId>
    <artifactId>broad-template</artifactId>
    <packaging>pom</packaging>
    <version>2.0.0</version>

    <modules>
        <module>broad-common</module>
        <module>broad-admin</module>
        <module>broad-system</module>
        <module>broad-framework</module>
        <module>broad-generator</module>
        <module>broad-quartz</module>
    </modules>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.1</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <java.version>11</java.version>
        <jwt.version>0.9.1</jwt.version>
        <boot.version>2.7.1</boot.version>
        <broad.version>2.0.0</broad.version>
        <druid.version>1.2.8</druid.version>
        <mybatis-plus.version>3.5.2</mybatis-plus.version>
        <satoken-version>1.30.0</satoken-version>
        <dynamic.version>3.5.0</dynamic.version>
    </properties>

    <dependencyManagement>
        <dependencies>

            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-web</artifactId>
                <version>${boot.version}</version>
            </dependency>
            <!-- springboot 测试 -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-test</artifactId>
                <scope>test</scope>
                <version>${boot.version}</version>
            </dependency>

            <!-- 阿里数据库连接池 -->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>druid-spring-boot-starter</artifactId>
                <version>${druid.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-data-redis</artifactId>
            </dependency>
            <!--     多数据源        -->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>dynamic-datasource-spring-boot-starter</artifactId>
                <version>${dynamic.version}</version>
            </dependency>

            <!-- SpringBoot集成mybatis-plus框架 -->
            <dependency>
                <groupId>com.baomidou</groupId>
                <artifactId>mybatis-plus-boot-starter</artifactId>
                <version>${mybatis-plus.version}</version>
            </dependency>

            <!-- Sa-Token 权限认证, 在线文档：http://sa-token.dev33.cn/ -->
            <dependency>
                <groupId>cn.dev33</groupId>
                <artifactId>sa-token-spring-boot-starter</artifactId>
                <version>${satoken-version}</version>
            </dependency>

            <!-- Token生成与解析-->
            <dependency>
                <groupId>io.jsonwebtoken</groupId>
                <artifactId>jjwt</artifactId>
                <version>${jwt.version}</version>
            </dependency>
            <!-- 系统模块  -->
            <dependency>
                <groupId>com.broad</groupId>
                <artifactId>broad-system</artifactId>
                <version>${broad.version}</version>
            </dependency>
            <!-- 公共模块  -->
            <dependency>
                <groupId>com.broad</groupId>
                <artifactId>broad-common</artifactId>
                <version>${broad.version}</version>
            </dependency>
            <!-- 管理模块  -->
            <!--            <dependency>-->
            <!--                <groupId>com.broad</groupId>-->
            <!--                <artifactId>broad-admin</artifactId>-->
            <!--                <version>${broad.version}</version>-->
            <!--            </dependency>-->
            <!-- 框架模块  -->
            <dependency>
                <groupId>com.broad</groupId>
                <artifactId>broad-framework</artifactId>
                <version>${broad.version}</version>
            </dependency>
